@* @model List<Exercise> *@

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Lista ćwiczeń</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-8"></div>
			<div class="col-4 text-end">
				<a asp-controller="Exercises" asp-action="Upsert" class="btn btn-primary">
					Dodaj nowe ćwiczenie <i class="bi bi-plus"></i>
				</a>
			</div>
		</div>

		<table>
			<tr>
				<thead>
					<th>Nazwa</th>
					<th>Push/Pull</th>
					<th>Poziom</th>
					<th>Izolowane/Całe ciało</th>
					<th>Sprzęt</th>
					<th>Główne mięśnie</th>
					<th>Poboczne mięśnie</th>
					<th>Instrukcje</th>
					<th>Kategoria</th>
					<th>Zdjęcie 1</th>
					<th>Zdjęcie 2</th>
				</thead>
				<tbody>
					@* @foreach (var obj in Model)
					{
						<tr>
							<td>@obj.Name</td>
						</tr>
					} *@
				</tbody>
			</tr>
		</table>

	</div>
</div>