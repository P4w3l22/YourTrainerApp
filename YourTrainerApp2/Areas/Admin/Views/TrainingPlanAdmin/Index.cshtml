@model List<TrainingPlan>

<div>jest tutaj @Model.Count planów</div>

<div class="card shadow my-4">
	<div class="card-header bg-secondary bg-gradient py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Lista ćwiczeń2</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-8"></div>
			<div class="col-4 text-end">
				<a asp-controller="ExerciseAdmin" asp-action="Create" class="btn btn-primary">
					Dodaj nowe ćwiczenie <i class="bi bi-plus"></i>
				</a>
			</div>
		</div>

		<table>
			<tr>
			<thead>
			<th class="w-25">Tytuł</th>
			<th class="w-20">Ćwiczenia</th>
			<th class="w-20">Twórca</th>
			<th>Edycja/Usuń</th>
			</thead>
			</tr>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr class="m-3">
						<td>
							@obj.Title
						</td>
						<td>
							@obj.TrainingDays
						</td>
						<td>
							@obj.Creator
						</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="TrainingPlanAdmin" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a asp-controller="TrainingPlanAdmin" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash-fill"></i> Delete
								</a>
							</div>
						</td>
					</tr>

				}
			</tbody>
			</tr>
		</table>

	</div>
</div>