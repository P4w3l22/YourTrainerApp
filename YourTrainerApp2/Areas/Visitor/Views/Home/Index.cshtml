@model Exercise

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" >
    <h1 class="display-4">Progresuj razem z nami!</h1>
    @* TODO: karuzela z ofertą: kontaktuj się z trenerem, dobierz plan pod siebie, przeglądaj ćwiczenia *@
    <div id="carouselExampleControls1" class="carousel slide my-5" data-bs-ride="carousel">
        <div class="carousel-inner" id="cardMost">
            <div class="carousel-item active" style="text-align:center">
                <div style="min-height: 200px;
                            background-image: url(https://img.freepik.com/free-photo/dumbbells-floor-gym-ai-generative_123827-23743.jpg);
                            max-width: 800px; 
                            margin-left: auto; 
                            margin-right: auto;
                            border-radius: 10px;">
					<h3>Kontaktuj się z trenerem</h3>
                    <h6>Zaloguj się i dodaj swojego trenera by móc otrzymywać od niego plany treningowe, wskazówki i kontaktować się z nim</h6>
                </div>
				
            </div>

            <div class="carousel-item">
                <div style="min-height: 200px;
                            background-color: gray;
                            max-width: 800px;
                            margin-left: auto;
                            margin-right: auto;
                            border-radius: 10px;">
                    <h3>Dobierz plan pod siebie</h3>
                    <h6>Oferujemy możliwość stworzenia własnego planu treningowego, spróbuj <a asp-area="" asp-controller="TrainingPlan" asp-action="Show">tutaj</a></h6>
                </div>
            </div>

            <div class="carousel-item">
                <div style="min-height: 200px;
                            background-color: gray;
                            max-width: 800px;
                            margin-left: auto;
                            margin-right: auto;
                            border-radius: 10px;">
                    <h3>Przeglądaj ćwiczenia</h3>
                    <h6>Znajdź ćwiczenie które Cię interesuje klikając <a asp-area="" asp-controller="Exercise" asp-action="Index">tutaj</a></h6>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleControls1"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleControls1"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    @* TODO: oferta z przykładowymi planami treningowymi *@

    <div class="m-4" style="background-color: gray; min-height: 500px; border-radius: 10px">
        <div class="card" style="max-width: 400px">
            <div class="card-header">
                Tytuł
            </div>
            <div class="card-body">
                <div class="card-title">
                    tytuł
                </div>
                <div class="card-text">
                    przykładowy plan
                </div>
            </div>
        </div>
	</div>
