<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourTrainerApp2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YourTrainerApp2.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #05423C;
             background-size: cover;">
    <partial name="_Notification"/>
    <header>
        <nav class="navbar navbar-expand-lg m-4 p-3" data-bs-theme="" 
             style="border-radius: 8px;
                    background-color: #008374;
                    box-shadow: 0px 0px 3px black">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/dumbell.png" style="color: #CCF1EF" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse ">
                    <ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Visitor" asp-controller="ExercisesSet" asp-action="Index"><p style="color: #CCF1EF">Atlas ćwiczeń</p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Visitor" asp-controller="TrainingPlan" asp-action="Index"><p style="color: #CCF1EF">Plan treningowy</p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Visitor" asp-controller="Blog" asp-action="Index"><p style="color: #CCF1EF">Blog</p></a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="ExerciseAdmin" asp-action="Index"><p style="color: black">Ćwiczenia</p></a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="TrainingPlanAdmin" asp-action="Index"><p style="color: black">Ćwiczenia</p></a>
                        </li>
                    </ul>
                    <a class="">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16" color="#CCF1EF">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                        </svg>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="" data-bs-theme="dark">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - YourTrainerApp2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
