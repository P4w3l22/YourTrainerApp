@model Exercise


<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Usuń ćwiczenie</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<div class="border p-3 mt-4">
				<input asp-for="Id" hidden />
				@*<div asp-validation-summary="All"></div>*@
				<div class="form-floating py-2 col-12">
					<input asp-for="Name" disabled class="form-control border-0 shadow" />
					<label asp-for="Name" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Force" disabled class="form-control border-0 shadow" />
					<label asp-for="Force" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Level" disabled class="form-control border-0 shadow" />
					<label asp-for="Level" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Mechanic" disabled class="form-control border-0 shadow" />
					<label asp-for="Mechanic" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Equipment" disabled class="form-control border-0 shadow" />
					<label asp-for="Equipment" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="PrimaryMuscles" disabled class="form-control border-0 shadow" />
					<label asp-for="PrimaryMuscles" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="SecondaryMuscles" disabled class="form-control border-0 shadow" />
					<label asp-for="SecondaryMuscles" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Instructions" disabled class="form-control border-0 shadow" />
					<label asp-for="Instructions" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Category" disabled class="form-control border-0 shadow" />
					<label asp-for="Category" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ImgPath1" disabled class="form-control border-0 shadow" />
					<label asp-for="ImgPath1" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ImgPath2" disabled class="form-control border-0 shadow" />
					<label asp-for="ImgPath2" class="ms-2"></label>
				</div>

				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Usuń</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Exercise" asp-action="Index" class="btn btn-outline-secondary border form-control">
							Wróć do listy
						</a>
					</div>
				</div>


			</div>
		</form>
	</div>
</div>